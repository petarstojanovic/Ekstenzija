{
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://maps.googleapis.com https://maps.gstatic.com; object-src 'self'",

  "name": "Locator",
  "description": "This extension shows information about web site loaded in tab.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
  	"geolocation",
    "activeTab",
    "storage",
  	"tabs"
  ]
}
